{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@accessors/*": ["lib/accessors/*"],
      "@engines/*": ["lib/engines/*"],
      "@managers/*": ["lib/managers/*"]
    }
  }
}
